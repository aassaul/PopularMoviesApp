<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MovieDetailsActivity"
    style="@style/Activity.Details"
    android:layout_width="match_parent">

    <TextView
        android:id="@+id/movieNemaTextView"
        style="@style/DetailsMovieName" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:weightSum="5"
        android:paddingLeft="@dimen/details_movie_image_padding_left">

        <ImageView android:id="@+id/movieImageView"
            style="@style/MovieImage" />
    </LinearLayout>
</LinearLayout>